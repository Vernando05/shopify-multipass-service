{
  "type": "module",
  "compilerOptions": {    
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "jest"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src",
    "tests"
  ]
}
