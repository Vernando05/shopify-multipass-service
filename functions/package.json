{
  "name": "functions",
  "scripts": {
    "lint": "eslint src/*",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "apollo-server-express": "^2.16.1",
    "express": "^4.17.1",
    "firebase-admin": "^9.1.0",
    "firebase-functions": "^3.9.1",
    "graphql": "^15.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.7.0",
    "firebase-functions-test": "^0.2.0",
    "typescript": "^4.0.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2015,
      "sourceType": "module"
    },
    "overrides": [{
      "files": ["*.ts", "*.tsx"],
      "rules": {        
        "no-undef": "off"
      }
    }]
  },
  "private": true
}
